<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- ActionBar -->

  <style name="Toolbar">
    <item name="android:textAppearance">@style/Text.Bold</item>
    <item name="android:textSize">@dimen/text_toolbar</item>
  </style>

  <!-- Button -->

  <style name="MaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:textAppearance">@style/Text.Bold</item>
  </style>

  <style name="Button">
    <item name="cornerRadius">@dimen/radius_button_default</item>
    <item name="backgroundTint">@color/color_button_default</item>
    <item name="android:paddingStart">@dimen/bt_default_p_start</item>
    <item name="android:paddingTop">@dimen/bt_default_p_top</item>
    <item name="android:paddingEnd">@dimen/bt_default_p_end</item>
    <item name="android:paddingBottom">@dimen/bt_default_p_bottom</item>
    <item name="android:textAppearance">@style/Text.Bold</item>
  </style>


  <!-- Popup menu -->

  <style name="PopupMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
    <item name="textAppearanceLargePopupMenu">@style/Text.PopupMenu</item>
    <item name="textAppearanceSmallPopupMenu">@style/Text.PopupMenu</item>
    <item name="android:popupBackground">?theColorSurface</item>
  </style>

  <style name="SwipeToRefreshLayout" parent="Theme.MaterialComponents">
    <item name="progressLineColor">?theColorAccent</item>
    <item name="circleBackgroundColor">?theColorPrimary</item>
  </style>


</resources>