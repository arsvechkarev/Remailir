<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- TextAppearance -->

  <style name="Text">
    <item name="android:textColor">?theColorTextPrimary</item>
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <style name="Text.Bold">
    <item name="android:fontFamily">@font/rubik_bold</item>
    <item name="android:letterSpacing">0.03</item>
  </style>

  <style name="Text.PopupMenu">
    <item name="android:textSize">@dimen/text_h5</item>
  </style>


  <!-- EditText -->

  <style name="EditText" parent="TextAppearance.AppCompat">
    <item name="android:background">?theColorSurface</item>
    <item name="android:textColor">?theColorTextPrimary</item>
    <item name="android:textSize">@dimen/text_h4</item>
    <item name="android:maxLines">1</item>
    <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
  </style>


</resources>