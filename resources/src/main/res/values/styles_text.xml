<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- TextAppearance -->

  <style name="Text">
    <item name="android:textSize">@dimen/text_h4</item>
    <item name="android:textColor">?theColorTextPrimary</item>
    <item name="android:fontFamily">@font/rubik_medium</item>
  </style>

  <style name="Text.Bold">
    <item name="android:textSize">@dimen/text_h3</item>
    <item name="android:fontFamily">@font/rubik_bold</item>
    <item name="android:letterSpacing">0.03</item>
  </style>

  <style name="Text.PopupMenu">
    <item name="android:textSize">@dimen/text_h5</item>
  </style>

  <style name="Text.SmsCode" parent="Text.Bold">
    <item name="android:layout_margin">4dp</item>
    <item name="android:textSize">@dimen/text_h2</item>
    <item name="android:textColor">?theColorTextSecondary</item>
  </style>

  <!-- EditText -->

  <style name="EditText">
    <item name="android:textAppearance">@style/Text</item>
    <item name="android:textColor">?theColorTextPrimary</item>
    <item name="android:textSize">@dimen/text_h3</item>
    <item name="android:maxLines">1</item>
    <item name="android:textCursorDrawable">@drawable/bg_cursor</item>
  </style>

  <style name="EditText.SearchCountries">
    <item name="android:textSize">@dimen/text_h2</item>
    <item name="android:textCursorDrawable">@drawable/bg_cursor_search</item>
  </style>


</resources>