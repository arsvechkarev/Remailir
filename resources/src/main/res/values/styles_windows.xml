<?xml version="1.0" encoding="utf-8"?>
<resources>


  <style name="BaseTheme" parent="Theme.MaterialComponents"/>

  <style name="AppTheme" parent="BaseTheme">
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowBackground">@drawable/window_bg</item>
    <item name="colorPrimary">?theColorPrimary</item>
    <item name="colorPrimaryDark">?theColorPrimary</item>
    <item name="colorOnPrimary">?theColorOnPrimary</item>
    <item name="colorAccent">?theColorAccent</item>
    <item name="colorSurface">?theColorSurface</item>
    <item name="colorOnSurface">?theColorOnSurface</item>
    <item name="android:textViewStyle">@style/Text</item>
    <item name="android:editTextStyle">@style/EditText</item>
    <item name="textAppearanceLargePopupMenu">@style/Text.PopupMenu</item>
    <item name="android:textAppearance">@style/Text</item>
  </style>

  <style name="AppTheme.Dark">
    <item name="theColorAccent">@color/dark_colorAccent</item>
    <item name="theColorAccentSecondary">@color/dark_colorAccentSecondary</item>
    <item name="theColorPrimary">@color/dark_colorPrimary</item>
    <item name="theColorOnPrimary">@android:color/white</item>
    <item name="theColorSurface">@color/dark_colorSurface</item>
    <item name="theColorOnSurface">@android:color/white</item>
    <item name="theColorBackground">@color/dark_colorBackground</item>
    <item name="theColorTextPrimary">@color/dark_colorTextPrimary</item>
    <item name="theColorTextSecondary">@color/dark_colorTextSecondary</item>
    <item name="theColorTextOther">@color/dark_colorTextOther</item>
    <item name="theColorItemSelected">@color/dark_colorItemSelected</item>
    <item name="theColorItemNotSelected">@color/dark_colorItemNotSelected</item>
    <item name="colorEditTextSearchCursor">@color/dark_colorEditTextSearchCursor</item>
    <item name="theColorIcon">@color/dark_colorItemSelected</item>
    <item name="theColorDivider">@color/dark_colorDivider</item>
    <item name="theColorButtonEnabled">@color/dark_colorButtonEnabled</item>
    <item name="theColorButtonDisabled">@color/dark_colorButtonDisabled</item>
    <item name="colorMessageThisUser">@color/dark_colorMessageThisUser</item>
    <item name="colorMessageOtherUser">@color/dark_colorMessageOtherUser</item>
    <item name="colorRefreshProgressBackground">
      @color/dark_colorRefreshProgressBackground
    </item>
    <item name="colorGradientBgStart">@color/dark_colorGradientBgStart</item>
    <item name="colorGradientBgEnd">@color/dark_colorGradientBgEnd</item>
  </style>

  <style name="AppTheme.Dark.ActionBar">
    <item name="windowNoTitle">false</item>
    <item name="windowActionBar">true</item>
  </style>

  <style name="LoadingDialogAnimation">
    <item name="android:windowEnterAnimation">@anim/loading_dialog_open</item>
    <item name="android:windowExitAnimation">@anim/loading_dialog_close</item>
  </style>

  <style name="FragmentBackground">
    <item name="android:background">@drawable/window_bg</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
  </style>

</resources>