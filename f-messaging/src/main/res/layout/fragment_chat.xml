<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clickable="true"
  android:fitsSystemWindows="true"
  android:focusable="true"
  android:background="?theColorBackground"
  tools:context=".presentation.MessagingFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/theToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?theColorPrimary"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/imageBack"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      android:layout_marginStart="16dp"
      android:background="?selectableItemBackgroundBorderless"
      android:src="@drawable/ic_back"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/imageOtherUser"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="12dp"
      android:layout_marginStart="24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageBack"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/textOtherUserName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:includeFontPadding="true"
      android:textSize="@dimen/text_h3"
      app:layout_constraintStart_toEndOf="@+id/imageOtherUser"
      app:layout_constraintTop_toTopOf="@+id/imageOtherUser"/>

    <TextView
      android:id="@+id/textOtherUserExtraInfo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:fontFamily="sans-serif-light"
      android:includeFontPadding="true"
      android:textSize="@dimen/text_h5"
      android:textColor="?theColorTextSecondary"
      app:layout_constraintBottom_toBottomOf="@+id/imageOtherUser"
      app:layout_constraintStart_toEndOf="@+id/imageOtherUser"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerChat"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:clipToPadding="false"
    android:paddingBottom="32dp"
    app:layout_constraintBottom_toTopOf="@+id/layoutTyping"
    app:layout_constraintTop_toBottomOf="@id/theToolbar"/>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layoutTyping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?theColorPrimary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <EditText
      android:id="@+id/editText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@android:color/transparent"
      android:hint="Message"
      android:maxLines="4"
      android:padding="16dp"
      android:textCursorDrawable="@drawable/bg_cursor"
      android:textSize="@dimen/text_h3"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/buttonSend"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
      android:id="@+id/buttonSend"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:visibility="invisible"
      android:layout_marginEnd="16dp"
      android:background="?selectableItemBackgroundBorderless"
      android:src="@drawable/ic_send"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>


  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>