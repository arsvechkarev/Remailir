<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?theColorBackground"
  android:gravity="center_horizontal"
  android:orientation="vertical">

  <com.arsvechkarev.views.TheToolbar
    android:id="@+id/theToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:the_toolbar_backgroundColor="?theColorPrimary"
    app:the_toolbar_title="@string/title_sms_verification"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:gravity="center"
    android:text="Enter a code we've \nsent to you"
    android:textSize="@dimen/text_h1"/>

  <com.arsvechkarev.views.SixDigitCodeLayout
    android:id="@+id/sixDigitsCodeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:digitsTextColor="?theColorTextPrimary"
    app:underscoresColor="?theColorAccent"/>

</LinearLayout>