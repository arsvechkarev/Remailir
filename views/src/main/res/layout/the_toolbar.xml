<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:ignore="ContentDescription">

  <com.arsvechkarev.views.WaveDrawerView
    android:id="@+id/waveView"
    android:layout_width="match_parent"
    android:layout_height="50dp"/>

  <ImageView
    android:id="@+id/imageBack"
    android:layout_width="@dimen/size_icon"
    android:layout_height="@dimen/size_icon"
    android:layout_marginStart="@dimen/the_toolbar_image_margin"
    android:background="?selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_back"/>

  <TextView
    android:id="@+id/textTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/the_toolbar_title_m_start"
    android:layout_marginTop="@dimen/the_toolbar_title_m_top"
    android:theme="@style/Toolbar"/>

  <ImageView
    android:id="@+id/imageSearch"
    android:layout_width="@dimen/size_icon"
    android:layout_height="@dimen/size_icon"
    android:layout_marginStart="@dimen/the_toolbar_image_margin"
    android:layout_marginEnd="@dimen/the_toolbar_image_margin"
    android:background="?selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_search"/>

  <View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_divider"
    android:layout_marginTop="@dimen/the_toolbar_divider_m_top"
    android:background="?theColorDivider"/>

</merge>